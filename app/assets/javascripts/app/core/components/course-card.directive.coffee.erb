courseLink = ->
  link = (scope, element, attributes) ->
    scope.currentPage = attributes.currentPage || "Unknown"

  link: link
  templateUrl: '<%= asset_path("app/components/course-link") %>'
  scope: true
  transclude: true
  restrict: 'E'

angular
  .module('DunnoApp')
  .directive('courseLink', courseLink)
