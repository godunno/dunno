CoursesIndexCtrl = ($location, $filter, $modal, Utils, courses) ->
  @courses = courses

  @activeCourses = $filter('filter')(@courses, active: true)
  @inactiveCourses = $filter('filter')(@courses, active: false)

  @unregister = (course)->
    if confirm("Deseja mesmo sair da disciplina #{course.name}?")
      course.unregister().then ->
        Utils.remove(@courses, course)

  @openNewCourseForm = ->
    $modal.open
      templateUrl: '<%= asset_path('app/courses/course-new.html') %>'
      windowClass: 'add__course full'
  @

CoursesIndexCtrl.$inject = ['$location', '$filter', '$modal', 'Utils', 'courses']

angular
  .module('DunnoApp')
  .controller('CoursesIndexCtrl', CoursesIndexCtrl)
