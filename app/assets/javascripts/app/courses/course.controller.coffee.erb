CourseCtrl = ($scope, ModalFactory, course)->
  $scope.course = course

  $scope.openEditCourseForm = ->
    new ModalFactory
      templateUrl: '<%= asset_path('app/courses/course-edit.html') %>'
      controller: 'EditCourseCtrl'
      controllerAs: 'vm'
      bindToController: true
      resolve: { course: -> angular.copy($scope.course) }
      scope: $scope
    .activate()

  $scope.openNotification = ->
    new ModalFactory
      templateUrl: '<%= asset_path('app/courses/notify/notify-members.html') %>'
      controller: 'NotificationCtrl'
      controllerAs: 'vm'
      bindToController: true
      resolve: { course: -> angular.copy($scope.course) }
    .activate()


CourseCtrl.$inject = [
  '$scope',
  'ModalFactory',
  'course'
]

angular
  .module('app.courses')
  .controller('CourseCtrl', CourseCtrl)
