courseLink = ->
  link = ($scope, $elem, $attrs) ->
    $scope.currentPage = $attrs.currentPage || "Unknown"

  link: link
  templateUrl: '<%= asset_path("courses/courseLink.html") %>'
  scope: true
  transclude: true
  restrict: 'E'

angular
  .module('DunnoApp')
  .directive('courseLink', courseLink)
