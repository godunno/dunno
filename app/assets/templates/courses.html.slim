header.page-title
  .row
    .large-4.vertical-center.columns style="float: left"
      button.radius.btn-style-1 Criar nova disciplina
    .large-4.large-centered.vertical-center.columns
      h1 Disciplinas

.courses-page

  .row

    ul.courses
      li.course-card.has-overlay ng-repeat="course in courses"
        a.overlay.published.hide href="#/courses.html"
          .button.btn-style-transparent-1.radius.vertical-center ver disciplina
        div ng-class="'title scheme-' + course.order"
          h2 {{course.name}}
          .subtitle
            span {{course.class_name}}
            span.right {{course.institution}} - Sala {{course.classroom}}

        .content
          div
            .period
              img src="/images/calendar.png"
              span {{course.start_date}} - {{course.end_date}}
            .students
              img src="/images/students.png"
              span {{course.students}} Alunos
          .dates
            ul
              li ng-repeat="date in course.dates"
                span {{date}}

