zf-action-sheet close-action-sheet-on-click=true
  zf-as-button.radius.dropdown.secondary.button.tiny.new__topic__visibility
    span.private ng-if="editingTopic.personal"
      i.icon.icon-lock>
      | Somente professor
    span ng-if="!editingTopic.personal"
      i.icon.icon-unlock>
      | Alunos
  zf-as-content position="top"
    ul[id="topic-private-{{topic.uuid}}"]
      li.private
        a ng-click="editingTopic.personal = true"
          i.icon.icon-lock>
          | Somente professor
