ul.dates
  .header
    span.current-month {{course.current_month | date:'MMMM / yy'}}
    a.next-month ng-click="fetch(course.next_month)"
      span {{course.next_month | date:'MMM / yy'}}
      i.icon.icon-arrow-circle-right
    a.previous-month ng-click="fetch(course.previous_month)"
      i.icon.icon-arrow-circle-left
      span {{course.previous_month | date:'MMM / yy'}}
  h2.blankslate ng-if="!course.events || course.events.length == 0" Não há aulas neste mês
  a.item ng-attr-id="{{ 'event-' + event.uuid }}" ng-href="{{eventPath(event)}}" ng-if="!hideEvent(event)" ng-repeat="event in course.events | orderBy:'start_at'" ng-class="locationInTime(event.start_at)"
    li
      ng-include src="'#{asset_path('shared/courses/event_in_list.html')}'"
    / TODO: Fazer o tooltip funcionar na altura da linha inteira
    .has-tooltip ng-if="hideEvent(event)" tooltip="Esta aula ainda está vazia" ng-include="'#{asset_path('shared/courses/event_in_list.html')}'" tooltip-animation="false"
