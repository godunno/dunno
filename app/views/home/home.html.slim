  .row
    .hero
      h2.hero__title
        | DENTRO E FORA DA SALA DE AULA
      p
        | Um aplicativo que vai auxiliar a gestão das aulas e estimular a comunicação e o engajamento entre professores e estudantes.
      .call__to__action__buttons
        a.button.large.radius>
          | Quero usar o Dunno
        a.button.large.radius.transparent
          | Faça um teste na prática

section.features__section
  ruby:
    @features = [
      {
        description: 'Todas as aulas e trabalhos de grupo em um único local',
        icon: 'icon-files'
      },{
        description: 'Colaboração para construir os encontros',
        icon: 'icon-chat'
      },{
        description: 'Controle total de datas de provas e entregas de trabalho',
        icon: 'icon-calendar'
      },{
        description: 'Tarefas compartilhadas com os alunos',
        icon: 'icon-plain-check'
      }
    ]
  .row
    .features__screenshot
      img[src='http://placehold.it/650x545']
    ul.features.small-block-grid-4
      - @features.each do |feature|
        li.feature
          i.icon[class="icon-#{feature[:icon]}"]
          = feature[:description]

section.video__section
  .row
    h2
      | AUTONOMIA E SEGURANÇA
    p
