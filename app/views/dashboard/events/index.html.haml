.panel
  .panel-heading
    Eventos
    - if @course.present?
      de #{@course.name}
  .panel-body
    %table.table.table-striped.table-advance.table-hover
      %tbody
        - @events.each do |event|
          %tr
            %td= event.title
            %td= l event.start_at, format: :short
            %td= list(event.topics.map(&:description))
            %td= list(event.thermometers.map(&:content))
            %td
              %span{ class: "label #{status_label(event.status)} label-mini" }= event.status
            %td
              - event.polls.where(status: "available").each do |poll|
                = link_to release_dashboard_poll_path(poll.uuid), method: :patch, class: 'btn btn-success btn-xs' do
                  %i.fa.fa-share
            %td
              - if event.available?
                = link_to open_dashboard_event_path(id: event.uuid), method: :patch, class: 'btn btn-success btn-xs' do
                  %i.fa.fa-play
              - elsif event.opened?
                = link_to close_dashboard_event_path(id: event.uuid), method: :patch, class: 'btn btn-danger btn-xs' do
                  %i.fa.fa-stop
              = link_to edit_dashboard_event_path(id: event.uuid), class: 'btn btn-primary btn-xs' do
                %i.fa.fa-pencil
              = link_to dashboard_event_path(id: event.uuid), method: :delete, data: { confirm: t(:are_you_sure) }, class: 'btn btn-danger btn-xs' do
                %i.fa.fa-trash-o

    = link_to 'Novo evento', new_dashboard_event_path, class: 'btn btn-primary'
