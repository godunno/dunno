= f.hidden_field :organization_id
= f.input :title
= f.input :start_at, as: :string, input_html: { class: 'datetimepicker', value: f.object.start_at.strftime('%d/%m/%Y %H:%M') }
= f.input :duration, as: :string, input_html: { class: 'timepicker', data: { 'show-meridian' => false, 'default-time' => 'value' } }
.panel
  .panel-heading= t(:topics)
  .panel-body
    = f.fields_for :topics
    = f.link_to_add t(:add_topic), :topics, class: 'btn btn-success'
.panel
  .panel-heading= t(:thermometers)
  .panel-body
    = f.fields_for :thermometers
    = f.link_to_add t(:add_thermometer), :thermometers, class: 'btn btn-success'
.panel
  .panel-heading= t(:polls)
  .panel-body
    = f.fields_for :polls
    = f.link_to_add t(:add_poll), :polls, class: 'btn btn-success'
.panel
  .panel-heading= t(:personal_notes)
  .panel-body
    = f.fields_for :personal_notes
    = f.link_to_add t(:add_personal_note), :personal_notes, class: 'btn btn-success'
= f.button :submit
= link_to t(:back), :back, class: 'btn'
